@page
@model OnlineShopRazor.Pages.User.Orders.IndexModel

@{
    ViewData["Title"] = "orders";
}

<div class="container" style="margin-top:150px">

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Order[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order[0].Total)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order[0].CreateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order[0].Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Order)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Total)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
