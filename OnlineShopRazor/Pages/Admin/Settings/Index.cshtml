                <img class="img-thumbnail" src="/images/@Model.Setting.Logo" />
                <span asp-validation-for="Setting.Logo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

