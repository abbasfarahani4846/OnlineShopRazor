                <label asp-for="Setting.Twitter" class="control-label"></label>
                <input asp-for="Setting.Twitter" class="form-control" />
                <span asp-validation-for="Setting.Twitter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Setting.Logo" class="control-label"></label>
                <input type="file" name="newLogo" class="form-control"/>
