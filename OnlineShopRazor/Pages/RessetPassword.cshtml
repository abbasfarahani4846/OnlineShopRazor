@page
@model OnlineShopRazor.Pages.RessetPasswordModel



<div class="container" style="margin-top:150px">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" disabled />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RecoveryCode" class="control-label"></label>
                    <input asp-for="RecoveryCode" class="form-control" />
                    <span asp-validation-for="RecoveryCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label"></label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Resset password" class="btn btn-outline-dark" />
                </div>
            </form>
        </div>
    </div>
</div>

